<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="LEARNING OBJECTIVES"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="35sp"
        android:text="After you study this chapter, you will be able to:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="80sp"
        android:layout_marginStart="80sp"
        android:layout_marginTop="20sp"
        android:text=" — Define diarrhea and types of diarrhea"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="80sp"
        android:layout_marginStart="80sp"
        android:layout_marginTop="10sp"
        android:text=" — Recognize clinical signs of dehydration"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="80sp"
        android:layout_marginStart="80sp"
        android:layout_marginTop="10sp"
        android:text=" — Assess diarrhea in sick children"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="80sp"
        android:layout_marginStart="80sp"
        android:layout_marginTop="10sp"
        android:text=" — Assess dehydration in young infants and sick children"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="80sp"
        android:layout_marginStart="80sp"
        android:layout_marginTop="10sp"
        android:text=" — Classify diarrhea and severity of dehydration"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold" />
</RelativeLayout>