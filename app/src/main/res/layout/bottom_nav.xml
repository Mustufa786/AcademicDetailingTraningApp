<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryBeta"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ic_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_home_white" />

            <TextView
                style="@style/textview"
                android:layout_below="@id/ic_home"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Home" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/learning"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ic_book"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_book_white" />

            <TextView
                style="@style/textview"
                android:layout_below="@id/ic_book"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="My Learning"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ic_setting"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_settings_white" />

            <TextView
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/ic_setting"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Settings" />
        </RelativeLayout>


    </LinearLayout>

</layout>
