                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/EclamTest01a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:tag="1"
                                android:text="@string/EclamTest01a" />

                            <RadioButton
                                android:id="@+id/EclamTest01b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:tag="2"
                                android:text="@string/EclamTest01b" />

                            <RadioButton
                                android:id="@+id/EclamTest01c"
