<?xml version="1.0" encoding="utf-8"?>

<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        

        <ScrollView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fldGrpInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/testing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ticker_red"
                    android:elevation="6dp"
                    android:gravity="center_horizontal"
                    android:keepScreenOn="true"
                    android:padding="4dp"
                    android:text="Information"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--Q01-->
                <android.support.v7.widget.CardView
                    style="@style/cardView"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="@string/district_name"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />


                        <EditText
                            style="@style/textInput"
                            android:id="@+id/info1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:hint="@string/district_name"
                            android:inputType="text"
                          />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <!--Q01-->
                <android.support.v7.widget.CardView
                    style="@style/cardView"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="@string/hfac_name"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />


                        <EditText
                            style="@style/textInput"
                            android:id="@+id/info2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:hint="@string/hfac_name"
                            android:inputType="text"
                           />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <!--Q01-->
                <android.support.v7.widget.CardView
                    style="@style/cardView"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="@string/doc_name"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />


                        <EditText
                            style="@style/textInput"
                            android:id="@+id/providerNam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:hint="@string/doc_name"
                            android:inputType="text"
                            />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <!--Q01-->
                <android.support.v7.widget.CardView
                    style="@style/cardView"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:text="@string/provider_id"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />


                        <EditText
                            android:maxLength="5"
                            style="@style/textInput"
                            android:id="@+id/providerId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:digits="0123456789"
                            android:hint="@string/provider_id"
                            android:inputType="text"
                            />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/proceedButton"
                    android:textAllCaps="false"
                    android:text="Proceed"
                    style="@style/main_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </ScrollView>

    </FrameLayout>


</layout>
